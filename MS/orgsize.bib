issn = {0012-9658},
journal = {Ecology},
keywords = {Animals,Bacteria,Bacteria: cytology,Demography,Finland,Lakes,Phytoplankton,Phytoplankton: cytology,Stochastic Processes,Zooplankton,Zooplankton: cytology},
month = {mar},
number = {3},
