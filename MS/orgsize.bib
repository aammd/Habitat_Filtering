isbn = {0012-9658},
issn = {00129658},
journal = {Ecology},
keywords = {Behavior,Competition,Consumptive effects,Habitat loss,Invasion,Metacommunity,Metapopulation,Migration,Nonconsumptive effects,Predator-prey interactions},
number = {9},
