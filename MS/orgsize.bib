author = {Siqueira, Tadeu and Bini, Luis Mauricio and Roque, Fabio Oliveira and {Marques Couceiro}, Sheyla Regina and Trivinho-Strixino, Susana and Cottenie, Karl},
doi = {10.1111/j.1600-0587.2011.06875.x},
file = {:home/andrew/Documents/reference/Mendeley{\_}pdfs/2012/Siqueira et al. - 2012 - Common and rare species respond to similar niche processes in macroinvertebrate metacommunities.pdf:pdf},
